---
import { Image } from "astro:assets";

const { text, href, svg } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="hover:scale-105 w-fit h-10 text-white text-center transition cursor-pointer flex gap-3 rounded-full px-3 py-1 justify-center items-center bg-black dark:bg-black/50 border-[0.3px] border-[#f7f7f7]"
  >{
    svg ? (
      <Image loading="lazy" width={25} src={svg} alt={text} {...Astro.props} />
    ) : (
      ""
    )
  }{text}</a
>
