---
interface Props {
  text: string;
  svg: ImageMetadata;
}

const { text, svg } = Astro.props;
---

<label
  class="w-auto sm:w-fit h-auto flex gap-3 rounded-full px-5 py-1 justify-center items-center bg-black dark:bg-black/50 text-white"
  >{svg ? <img width="25px" src={svg?.src} alt="" /> : ""}{text}</label
>
