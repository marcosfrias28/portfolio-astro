---
interface Props {
  text: string;
  svg: ImageMetadata;
  color: string;
}

const { text, svg, color } = Astro.props;
---

<label
  style={`background-color: ${color}`}
  class={`w-24 h-auto flex gap-3 rounded-full px-5 py-[2px] justify-center items-center text-white text-xs`}
  >{svg ? <img width="15px" src={svg?.src} alt="" /> : ""}{text}</label
>
